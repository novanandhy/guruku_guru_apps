<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hari"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#31409f"
                    />

                <Spinner
                    android:id="@+id/hari_ajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#31409f" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/klik_mulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Mulai"
                android:textColor="#31409f"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/jam_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/klik_selesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Selesai"
                android:textColor="#31409f"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/jam_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"/>
        </LinearLayout>

        <Button
            android:id="@+id/simpan_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simpan"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
